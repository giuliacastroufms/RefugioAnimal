@model LoginViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="content-section">
                <img class="me-2 login-background" src="/assets/login-background.svg" alt="background" />
            </div>
        </div>

        <div class="col-md-6 d-flex flex-column align-items-center mt-5">
            <form asp-action="Login" method="post" class="w-100">
                <h2 class="text-center">Login</h2>

                <div class="form-group mt-3">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control border ipt-login h-25" placeholder="Digite seu email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Password">Senha</label>
                    <input asp-for="Password" type="password" class="form-control border ipt-login h-50" placeholder="Digite sua senha" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mt-4 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary w-75 rounded">Entrar</button>
                </div>

                <div class="mt-3 text-center">
                    <span>
                        <p>Não tem conta? <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Cadastrar</a></p>
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

@section Scripts {
    @* Carrega scripts para validação *@
    @await Html.PartialAsync("_ValidationScriptsPartial")
}