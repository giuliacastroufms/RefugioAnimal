
@using RefugioAnimal.Models
@model AnimalProfileViewModel

@{
    	ViewData["Title"] = "Animal";
}

<div class="container">
    <div class="px-5 w-100 mb-5">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @{
                    bool isFirst = true;
                }
                @foreach (var photo in Model.Animal.Photos)
                {
                    <div class="carousel-item @(isFirst ? "active" : "")">
                        <img src="@photo" class="d-block carousel-img w-100" alt="Foto do - @Model.Animal.Name">
                    </div>
                    isFirst = false;
                }
            </div>
            @if (Model.Animal.Photos.Count > 1)
            {
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Anterior</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Próximo</span>
                </button>
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="card shadow-sm p-3 mb-5 bg-white rounded">
        <div class="card-body text-center">
            <h1 class="fw-bold">@Model.Animal.Name</h1>
            <h2>
                <span class="badge bg-primary">
                    @if (Model.Animal.Specie == "Cat")
                    {
                        @:Gato
                    }
                    else if (Model.Animal.Specie == "Dog")
                    {
                        @:Cachorro
                    }
                    else
                    {
                        @:Outros
                    }
                </span>
            </h2>
            <h3 class="text-muted">@Model.Animal.BreedDescription</h3>
            <p class="mt-3 fs-5">@Model.Animal.Description</p>
        </div>
    </div>
</div>

<form class="formulario-adocao">
    <div class ="mb-3">
        <p>Justificativa</p>
        <div class="form-floating mb-3">
            <textarea class="form-control" id="floatingInput" rows="3"></textarea>
            <label for="floatingInput">Digite</label>

        </div>
    </div>
    <div class="mb-3">
        <p>Descreva sua morada</p>
        <div class="form-floating mb-3">
            <textarea class="form-control" id="floatingInput" rows="3"></textarea>
            <label for="floatingInput">Digite</label>

        </div>
    </div>
    <div class="mb-3">
        <p>Possui outros animais? Quantos?</p>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput" aria-describedby="emailHelp">
            <label for="floatingInput">Digite</label>
        </div>
    </div>
    <div class="mb-3">
        <p>Os animais possuem acesso à rua?</p>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput">
            <label for="floatingInput">Digite</label>
        </div>
    </div>
    <div class="mb-3">
        <p>Os animais são vacinados?</p>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="floatingInput">
            <label for="floatingInput">Digite</label>
        </div>
    </div>
    <div class="mb-3 form-check">
        <div id="adption-confirm" class="form-text">Aceitar os termos de responsabilidade e dados corretos seguindo as normas da LGPD</div>
        <input type="checkbox" class="form-check-input" id="check-adption-confirm">
        <label class="form-check-label" for="check-adption-confirm">Possuo mais que 18 anos, confirmo a identidade, aceito a responsabilidade, etc...</label>
    </div>
    <button type="submit" class="btn btn-primary">Enviar!</button>
</form>

@section Styles {
    <link rel="stylesheet" href="~/css/animal-profile.css" asp-append-version="true" />
}