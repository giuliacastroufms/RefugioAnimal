@using RefugioAnimal.Models.DTOs
@model TestViewModel
@{
    ViewData["Title"] = "Test Endpoints";
}

<h2>Test Endpoints</h2>

<h3>1. Get All Animals</h3>
<button id="getAllAnimalsButton">Get All Animals</button>

<div id="animalsList">
    @if (Model is not null && Model.Animals is not null && Model.Animals.Count > 0)
    {
        <ul>
            @foreach (var animal in Model.Animals)
            {
                <li> Id - @animal.Id </li>
                <li> Name - @animal.Name </li>
                <li> Description - @animal.Description </li>
                <li> Specie - @animal.Specie </li>
                <li> AdoptionStatus - @animal.AdoptionStatus </li>
            }
        </ul>
    }
    else
    {
        <p>No animals found.</p>
    }
</div>

<h3>2. Create New Animal</h3>
<form id="createAnimalForm">
    <input type="text" name="Name" id="createName" placeholder="Name" required />
    <input type="text" name="Description" id="createDescription" placeholder="Description" />
    <select name="Specie" id="createSpecie">
        <option value="Cachorro">Cachorro</option>
        <option value="Gato">Gato</option>
    </select>
    <button type="submit">Create Animal</button>
</form>

<div id="createResult"></div>

<h3>3. Edit Animal</h3>
<form id="editAnimalForm">
    <input type="number" name="Id" id="editId" placeholder="Animal ID" required />
    <input type="text" name="Name" id="editName" placeholder="Name" />
    <input type="text" name="Description" id="editDescription" placeholder="Description" />
    <select name="Specie" id="editSpecie">
        <option value="Cachorro">Cachorro</option>
        <option value="Gato">Gato</option>
    </select>
    <button type="submit">Edit Animal</button>
</form>
<div id="editResult"></div>

<h3>4. Delete Animal</h3>
<form id="deleteAnimalForm">
    <input type="number" name="Id" id="deleteId" placeholder="Animal ID" required />
    <button type="submit">Delete Animal</button>
</form>
<div id="deleteResult"></div>

@section Scripts {
    <script src="~/js/animal.js"></script>
}
